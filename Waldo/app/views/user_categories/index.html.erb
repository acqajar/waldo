<p id="notice"><%= notice %></p>

<h1>Listing User Categories</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>User</th>
      <th>Category</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_categories.each do |user_category| %>
      <tr>
        <td><%= user_category.user_id %></td>
        <td><%= user_category.category_id %></td>
        <td><%= user_category.user %></td>
        <td><%= user_category.category %></td>
        <td><%= user_category.rating %></td>
        <td><%= link_to 'Show', user_category %></td>
        <td><%= link_to 'Edit', edit_user_category_path(user_category) %></td>
        <td><%= link_to 'Destroy', user_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

